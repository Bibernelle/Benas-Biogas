{# templates/AssignRole.twig #}
{% extends 'layout.twig' %}

{% block title %} AssignRole {% endblock %}

{% block bodyClass %}assignRole{% endblock %}

{% block wrapperPrefix %}biogas{% endblock %}


{% block content %}
    {% include 'list.twig' %}
<form action="../../index.php/Admin/AssignRole" method="post">
 <input type="hidden" name="{{ constant('CSRF_TOKEN') }}" value="{{ CSRF_TOKEN }}"/>
    <label for="username">Benutzername</label>
    <select name="username" type="text">
        {% for user in users %}
            <option value="{{ user }}">{{ user }}</option>
        {% endfor %}
    </select>
    <br />
    <label for="role">Rechte</label>
    <select name="role" type="text">
        {% for role in roles %}
            <option value="{{ role }}">{{ role }}</option>
        {% endfor %}
    </select>
    <br />
    <input type="submit" value="Zuweisen"/>
</form>

{% endblock %}