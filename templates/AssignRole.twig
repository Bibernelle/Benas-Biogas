{# templates/AssignRole.twig #}
{% extends 'layout.twig' %}

{% block title %} AssignRole {% endblock %}

{% block bodyClass %}AssignRole{% endblock %}

{% block wrapperPrefix %}biogas{% endblock %}


{% block content %}
<form action="../../index.php/Admin/AssignRole" method="post">
    <label for="username">username</label>
    <select name="username" type="text">
        {% for user in users %}
            <option value="{{ user }}">{{ user }}</option>
        {% endfor %}
    </select>
    <br />
    <label for="role">role</label>
    <select name="role" type="text">
        {% for role in roles %}
            <option value="{{ role }}">{{ role }}</option>
        {% endfor %}
    </select>
    <br />
    <input type="submit" value="OK"/>
</form>
{% include 'list.twig' %}
{% endblock %}