{# templates/CreateUser.twig #}
{% extends 'layout.twig' %}

{% block title %} CreateUser {% endblock %}

{% block bodyClass %}CreateUser{% endblock %}

{% block wrapperPrefix %}biogas{% endblock %}


{% block content %}
<form action="../../index.php/Admin/CreateUser" method="post">
    <label for="username">username</label>
    <input name="username" type="text"/>
    <br />
    <label for="password">password</label>
    <input name="password" type="password"/>
    <br />
    <label for="role">role</label>
    <select name="role" type="text">
        {% for role in roles %}
            <option value="{{ role }}">{{ role }}</option>
        {% endfor %}
    </select>
    <input type="submit" value="OK"/>
</form>
{% include 'list.twig' %}

{% endblock %}