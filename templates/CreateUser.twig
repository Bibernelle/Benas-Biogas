{# templates/CreateUser.twig #}
{% extends 'layout.twig' %}

{% block title %} CreateUser {% endblock %}

{% block bodyClass %}mitarbeiter{% endblock %}

{% block wrapperPrefix %}biogas{% endblock %}


{% block content %}
    {% include 'list.twig' %}
<form action="../../index.php/Admin/CreateUser" method="post">
 <input type="hidden" name="{{ constant('CSRF_TOKEN') }}" value="{{ CSRF_TOKEN }}"/>
    <label for="username">Benutzername</label>
    <input name="username" type="text"/>
    <br />
    <label for="password">Passwort</label>
    <input name="password" type="password"/>
    <br />
    <label for="role">Benutzerrechte</label>
    <select name="role" type="text">
        {% for role in roles %}
            <option value="{{ role }}">{{ role }}</option>
        {% endfor %}
    </select>
    <input type="submit" value="OK"/>
</form>


{% endblock %}