<!DOCTYPE html>
<html>
<head>
    <title>CreateArticle</title>
</head>
<body>

<form action="index.php?Controller=AdminController&Action=CreateArticle" method="post" enctype="multipart/form-data">
    <label for="header">Header</label>
    <input name="header" type="text">

    </input>
    <label for="text">Text</label>
    <input name="text" type="text">

    </input>
    <br />
    <label for="image">Bild</label>
    <input name="fileToUpload" type="file" id="fileToUpload">

    </input>
    <br />
    <input type="submit" value="Post"/>

    {% for article in articles %}
        <h2 value="{{ article.Header }}">{{ article.Header }}</h2>
        <p value="{{ article.Text }}">{{ article.Text }}</p>
        <img src="{{ article.ImagePath }}"> </img>
        <p value="{{ article.Timestamp }}">{{ article.Timestamp }}</p>
    {% endfor %}
</form>


</body>
</html>